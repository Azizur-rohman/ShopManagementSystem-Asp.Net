@model Shop_Management_System.Models.User

@{
    ViewBag.Title = "UserCreateDelete";
}

<h2>UserCreateDelete</h2>
<div class="col-xl-12 col-md-12 mb-12">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <h3 class="alert-danger col-md-6">Are you sure you want to delete this?</h3>
                    <div>
                        <h4 class="alert-dark col-md-1">User</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Username)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Username)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Role)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Role)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Status)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </div>
                            </div>
                            <br />
                        }
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <div class="btn btn-dark">
                            <a href="@Url.Action("UserCreate", "Home")" style="text-decoration:none;color:white;">Cancel</a>
